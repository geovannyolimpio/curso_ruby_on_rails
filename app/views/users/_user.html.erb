<div class="user-info">
  <div class="user-avatar col-md-4 col-sm-3 col-xs-12">
    <%= gravatar_for_email(user.email) %>
  </div>

  <div class="user-data col-md-8 col-sm-9 col-xs-12">
    <ul class="user-data">
      <li>
        <%= link_to user do %>
          <span class="username"><%= user.name %></span>
        <% end %>
      </li>
      <li>
        <a href="#">
          <span class="label label-pill label-primary">50</span>
          Seguindo
        </a>
      </li>
      <li>
        <a href="#">
          <span class="label label-pill label-success">55</span>
          Seguidores
        </a>
      </li>
    </ul>
  </div>
</div>